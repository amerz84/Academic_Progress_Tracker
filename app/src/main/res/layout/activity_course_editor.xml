<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CourseEditorActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Title"
        android:textSize="@dimen/detail_label_size"
        app:layout_constraintBottom_toBottomOf="@+id/course_editor_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/course_editor_title" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Start Date"
        android:textSize="@dimen/detail_label_size"
        app:layout_constraintBottom_toBottomOf="@+id/course_editor_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/course_editor_start" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="End Date"
        android:textSize="@dimen/detail_label_size"
        app:layout_constraintBottom_toBottomOf="@+id/course_editor_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/course_editor_end" />

    <EditText
        android:id="@+id/course_editor_title"
        android:textSize="@dimen/detail_text_size"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="16dp"
        android:hint="Enter title"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Status"
        android:textSize="@dimen/detail_label_size"
        app:layout_constraintBottom_toBottomOf="@+id/course_ed_status_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/course_ed_status_spinner" />

    <TextView
        android:id="@+id/course_editor_start"
        android:textSize="@dimen/detail_text_size"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="16dp"
        android:hint="Enter start date"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/course_editor_title" />

    <TextView
        android:id="@+id/course_editor_end"
        android:textSize="@dimen/detail_text_size"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="16dp"
        android:hint="Enter end date"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/course_editor_start" />

    <Spinner
        android:id="@+id/course_ed_status_spinner"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:entries="@array/status_choices"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="@+id/course_editor_end"
        app:layout_constraintTop_toBottomOf="@+id/course_editor_end" />

</androidx.constraintlayout.widget.ConstraintLayout>